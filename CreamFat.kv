
<ItemTextInput@TextInput>:
    multiline: False
    #size_hint_x: 0.2
    #size_hint_y: 0.9
    size_hint: None, None
    size: '50sp','50sp'
    input_type: 'number'
    input_filter: 'int'
    halign: 'center'
    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

<ItemLabel@Label>:
    helign: 'left'
    valign: 'middle'
    text_size: self.size

<Container>:
    orientation: 'vertical'
    padding: 10
    spacing: '10dp'

    amount_of_milk: amount_of_milk
    fat_cont_cream: fat_cont_cream
    amount_of_cream: amount_of_cream
    fat_cont_milk: fat_cont_milk
    fat_cont_mix: fat_cont_mix

    Label:
        id: amount_of_milk
        text:'Количество молока для разведения, мл'
        size_hint_y: 0.4
        valign: 'middle'
        text_size: self.size

    GridLayout:
        cols: 2
        size_hint_y: 0.4
        spacing: 15
        padding: 15

        ItemLabel:
            text:'жирность сливок, %'
        ItemTextInput:
            id: fat_cont_cream
            text:'35'

        ItemLabel:
            text:'количество сливок, мг'
        ItemTextInput:
            id: amount_of_cream
            text:'500'
           
        ItemLabel:
            text:'жирность молока, %'
        ItemTextInput:
            id: fat_cont_milk
            text:'2.5'
            input_filter: 'float'

        ItemLabel:
            text:'нужная жирность смеси, %'
        ItemTextInput:
            id: fat_cont_mix
            text:'20'
            
    Button: 
        text: 'Рассчитать'
        size_hint: 0.5, 0.1
        pos_hint: {'center_x': 0.5, 'y': 0.1}
        on_release: root.change_text()
